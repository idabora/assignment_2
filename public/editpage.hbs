   <div class="mainsection">

    <h1>Edit Page</h1>
    <div class="container">
        <form action="/stories/editpage/{{id}}" method="POST">
            <input type="hidden" name="_method" value="PUT" />

            <div class="story">
                <textarea id="body" name='body' cols="120" rows="10">{{post.body}}</textarea>
            </div>
            <div class="buttons">
                <input type="submit">
                <a href="/dashboard">Cancel</a>
            </div>
        </form>
    </div>
   </div>
